<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>Movie Service</display-name>

    <servlet>
        <servlet-name>BaijiServlet</servlet-name>
        <servlet-class>com.ctriposs.baiji.rpc.server.BaijiServlet</servlet-class>
        <init-param>
            <param-name>service-class</param-name>
            <param-value>com.ctriposs.baiji.rpc.samples.movie.MovieServiceImpl</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>BaijiServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
